# Copy this file to .env and fill in your API keys

# =============================================================================
# API Keys
# =============================================================================
OPENAI_API_KEY="sk-..."

# =============================================================================
# Weaviate
# =============================================================================
WEAVIATE_URL="http://localhost:8080"

# =============================================================================
# OpenAI Embeddings (used by Weaviate vectorizer)
# =============================================================================
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"  # text-embedding-3-small, text-embedding-3-large

# =============================================================================
# Agent Settings (main orchestrator)
# =============================================================================
AGENT_MODEL="gpt-5-nano"                   # gpt-5-nano, gpt-5-mini, gpt-5
AGENT_REASONING_EFFORT="medium"            # low, medium, high
AGENT_REASONING_SUMMARY=true               # Set to false if your OpenAI org is unverified
AGENT_MAX_ITERATIONS=30                    # Max agentic loops before stopping

# =============================================================================
# Judgment Subagent Settings (isolated context for product evaluation)
# =============================================================================
JUDGE_MODEL="gpt-5-nano"                   # Model for judging product relevance
JUDGE_REASONING_EFFORT="low"               # low / medium recommended, it's a fairly simple task
JUDGE_CHUNK_SIZE=25                        # Products per judgment batch
JUDGE_MAX_WORKERS=5                        # Parallel judgment workers
JUDGE_MAX_RETRIES=2                        # Retry attempts on failure

# =============================================================================
# Validation Subagent Settings (reviews judgments before save)
# =============================================================================
VALIDATE_MODEL="gpt-5-nano"                # Model for validating judgments
VALIDATE_REASONING_EFFORT="medium"         # Higher than judge - needs to catch errors
VALIDATE_CHUNK_SIZE=20                     # Smaller chunks for more careful review
VALIDATE_MAX_WORKERS=3                     # Fewer parallel workers for reliability
VALIDATE_MAX_RETRIES=2                     # Retry attempts on failure

# =============================================================================
# Category Browsing
# =============================================================================
BROWSE_PRODUCT_LIMIT=2000                  # Max products to fetch per category

# =============================================================================
# Golden Set Quality Thresholds
# =============================================================================
MIN_EXACT_JUDGMENTS=2                      # Minimum Exact (2) judgments required
MIN_TOTAL_JUDGMENTS=50                     # Minimum total judgments required
